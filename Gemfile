gem "rack-cors"
gem "fast_jsonapi"
gem "oj"
gem "rswag-api"
gem "rswag-ui"

# Authentication
gem "devise"
gem "devise-jwt"
gem "pundit"

# Blockchain
gem "web3-eth"

# Encryption
gem "rbnacl"

# Storage
gem "redis"
gem "mongo"
gem "ipfs-api"

# Background Jobs
gem "sidekiq"
gem "sidekiq-scheduler"

# Monitoring
gem "sentry-ruby"
gem "sentry-rails"
gem "lograge"

group :development, :test do
  gem "rspec-rails"
  gem "rswag-specs"
  gem "factory_bot_rails"
  gem "faker"
  gem "database_cleaner"
  gem "rubocop"
  gem "bundler-audit"
end

group :development do
  gem "web-console"
end


